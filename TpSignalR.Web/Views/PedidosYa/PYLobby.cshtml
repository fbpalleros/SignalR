@{
    ViewData["Title"] = "Lobby";
}

<style>
    /* ===== SELECTION CONTAINER CENTRADO ===== */
    .selection-container {
        min-height: calc(100vh - 130px); /* 🔥 Ajustamos por el navbar del layout */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 0 20px;
    }

    .selection-title {
        font-size: 2.8rem;
        font-weight: 800;
        margin-bottom: 45px;
        background: linear-gradient(90deg, #00ffd0, #00aaff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: 1px;
    }

    /* ===== CARDS CONTAINER ===== */
    .cards-container {
        display: flex;
        gap: 45px;
        justify-content: center;
        flex-wrap: nowrap;
        width: 100%;
        max-width: 1200px;
    }

    /* ===== SERVICE CARD ===== */
    .service-card {
        width: 360px; /* 🔥 Más grandes */
        height: 430px; /* 🔥 Más presencia */
        border-radius: 22px;
        overflow: hidden;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        background: rgba(20,20,20,0.55);
        border: 1px solid rgba(255,255,255,0.06);
        box-shadow: 0 10px 32px rgba(0,0,0,0.75);
        backdrop-filter: blur(20px);
        transition: transform .35s ease, box-shadow .35s ease, border .35s ease, filter .35s ease;
        filter: grayscale(100%) brightness(0.65);
    }

        .service-card:hover {
            transform: translateY(-12px) scale(1.03);
            filter: none;
            border-color: rgba(0,255,200,0.35);
            box-shadow: 0 18px 38px rgba(0,255,200,0.12), 0 14px 30px rgba(0,0,0,0.8);
        }

    /* ===== CARD IMAGE ===== */
    .card-image {
        height: 190px; /* 🔥 Más grande */
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 5rem; /* 🔥 Mucho más presencia */
        background: rgba(255,255,255,0.05);
        border-bottom: 1px solid rgba(255,255,255,0.06);
    }

    /* ===== CARD CONTENT ===== */
    .card-content {
        padding: 26px;
        text-align: left;
    }

    .card-title {
        font-size: 1.55rem; /* 🔥 Más grande */
        font-weight: 700;
        margin: 0 0 12px;
        color: #fff;
    }

    .card-description {
        font-size: 1.05rem;
        color: #dcdcdc;
        margin: 0;
    }
</style>



<div class="selection-container">
    <h1 class="selection-title">Selecciona tu servicio</h1>

    <div class="cards-container">
        <a href="@Url.Action("PedidosYaLobby", "PedidosYa")" class="service-card card-admin">
            <div class="card-image">🔐</div>
            <div class="card-content">
                <h2 class="card-title">Cliente</h2>
                <p class="card-description">Realizar pedidos y compras</p>
            </div>
        </a>

        <a href="@Url.Action("RepartidorLobby", "Repartidor")" class="service-card card-user">
            <div class="card-image">👤</div>
            <div class="card-content">
                <h2 class="card-title">Repartidor</h2>
                <p class="card-description">Tomar envíos y realizar entregas</p>
            </div>
        </a>

        <a href="@Url.Action("ComercioLobby", "Comercio")" class="service-card card-client">
            <div class="card-image">💼</div>
            <div class="card-content">
                <h2 class="card-title">Tienda</h2>
                <p class="card-description">Catálogo de ventas</p>
            </div>
        </a>
    </div>
</div>
