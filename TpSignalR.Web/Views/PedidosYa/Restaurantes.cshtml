@model List<TpSignalR.Entidades.Comercio>

@{
    ViewData["Title"] = "Restaurantes";
}

<style>
    body {
        background-color: #0f0f0f;
        color: #fff;
        font-family: 'Segoe UI', sans-serif;
        padding: 30px;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .card {
        background-color: #1a1a1a;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        transition: 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 15px #00ffcc;
        }

        .card h3 {
            color: #00ffcc;
            margin-bottom: 10px;
        }

        .card p {
            color: #ccc;
            margin: 5px 0;
        }

    .btn-ver {
        display: inline-block;
        margin-top: 10px;
        background-color: #00bfa6;
        color: #000;
        padding: 8px 14px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
    }
</style>

<h1>🍴 Restaurantes disponibles</h1>

<div class="grid">
    @if (Model != null && Model.Any())
    {
        @foreach (var r in Model)
        {
            <div class="card">
                <img src="https://images.unsplash.com/photo-1600891964599-f61ba0e24092?w=800"
                     alt="@r.Nombre"
                     style="width:100%;height:200px;object-fit:cover;border-radius:8px;" />
                <h3>@r.Nombre</h3>
                <p>@r.Direccion</p>
                <a href="@Url.Action("ServicioSeleccionado", "PedidosYa", new { comercioId = r.Id })" class="btn-ver">
                    Ver menú
                </a>
            </div>
        }
    }
    else
    {
        <p>No hay restaurantes cargados.</p>
    }
</div>
