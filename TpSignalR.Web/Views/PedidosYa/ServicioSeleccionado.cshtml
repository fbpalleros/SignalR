@model List<TpSignalR.Entidades.Producto>
@{
    ViewData["Title"] = "Servicio Seleccionado";
    var categoria = "Restaurantes";
}

<style>
    .servicio-container {
        background-color: #0f0f0f;
        color: #fff;
        font-family: 'Segoe UI', sans-serif;
        padding: 30px 40px;
        min-height: 100vh;
    }

    .servicio-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        flex-wrap: wrap;
        gap: 20px;
    }

        .servicio-header h1 {
            font-size: 1.8rem;
            font-weight: 700;
            color: #00bfa6;
        }

        .servicio-header input {
            background-color: #1a1a1a;
            border: 1px solid #333;
            border-radius: 8px;
            padding: 10px 15px;
            color: #fff;
            width: 280px;
        }

    .productos-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 24px;
    }

    .producto-card {
        background-color: #1a1a1a;
        border-radius: 14px;
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
        cursor: pointer;
    }

        .producto-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 15px rgba(0, 255, 204, 0.2);
        }

        .producto-card img {
            width: 100%;
            height: 160px;
            object-fit: cover;
        }

    .producto-info {
        padding: 14px;
    }

        .producto-info h3 {
            font-size: 1.1rem;
            margin-bottom: 8px;
            color: #fff;
        }

        .producto-info p {
            font-size: 0.9rem;
            color: #ccc;
            margin-bottom: 6px;
        }

        .producto-info .precio {
            color: #00ffcc;
            font-weight: bold;
        }

    .btn-volver {
        display: inline-block;
        margin-top: 40px;
        background-color: transparent;
        border: 1px solid #00bfa6;
        color: #00bfa6;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-volver:hover {
            background-color: #00bfa6;
            color: #0f0f0f;
        }
</style>

<div class="servicio-container">
    <div class="servicio-header">
        <h1>🍽️ @categoria</h1>
        <input type="text" placeholder="Buscar locales o productos..." />
    </div>

    <div class="productos-grid">
        @if (Model != null && Model.Any())
        {
            foreach (var producto in Model)
            {
                <div class="producto-card">
                    <img src="https://images.unsplash.com/photo-1550547660-d9450f859349?w=800" alt="@producto.Nombre">
                    <div class="producto-info">
                        <h3>@producto.Nombre</h3>
                        <p>@producto.Categoria</p>
                        <p class="precio">@producto.Precio.ToString("C0")</p>

                        @Html.AntiForgeryToken()
                        <button type="button"
                                onclick="enviarPedido(@producto.Id)"
                                style="margin-top:8px;padding:8px 12px;border-radius:8px;background:#00bfa6;border:none;color:#000;font-weight:600;">
                            Comprar
                        </button>

                    </div>
                </div>
            }
        }
        else
        {
            <p>No hay productos disponibles.</p>
        }
    </div>

    <a href="/PedidosYa/PedidosYaLobby" class="btn-volver">⬅️ Volver</a>
</div>

@section Scripts {
    <script>
        async function enviarPedido(productoId) {
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            try {
                const res = await fetch('/PedidosYa/solicitarPedido', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': token
                    },
                    body: new URLSearchParams({ productoId })
                });

                const data = await res.json();

                if (data.success) {
                    console.log('✅ Pedido enviado correctamente');
                     window.location.href = '/PedidosYa/FinalizarCompra';
                } else {
                    alert('⚠️ Ocurrió un problema');
                }
            } catch (err) {
                console.error('Error:', err);
                alert('❌ Error de red');
            }
        }
    </script>
}
