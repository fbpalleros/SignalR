@model List<TpSignalR.Entidades.Producto>
@{
    ViewData["Title"] = "Servicio Seleccionado";
    var categoria = "Restaurantes";
}

<style>
    .servicio-container {
        background-color: #0f0f0f;
        color: #fff;
        font-family: 'Segoe UI', sans-serif;
        padding: 30px 40px;
        min-height: 100vh;
    }

    .servicio-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        flex-wrap: wrap;
        gap: 20px;
    }

        .servicio-header h1 {
            font-size: 1.8rem;
            font-weight: 700;
            color: #00bfa6;
        }

        .servicio-header input {
            background-color: #1a1a1a;
            border: 1px solid #333;
            border-radius: 8px;
            padding: 10px 15px;
            color: #fff;
            width: 280px;
        }

    /* ===== GRID ===== */
    .productos-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 32px;
        padding: 10px;
    }

    /* ===== CARD ===== */
    .producto-card {
        background: rgba(20, 20, 20, 0.72);
        border-radius: 22px;
        overflow: hidden;
        height: 420px;
        border: 1px solid rgba(255,255,255,0.06);
        box-shadow: 0 8px 24px rgba(0,0,0,0.55);
        backdrop-filter: blur(18px);
        display: flex;
        flex-direction: column;
        transition: transform .35s ease, box-shadow .35s ease, border .35s ease;
        cursor: pointer;
    }

        .producto-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 18px 36px rgba(0,255,200,0.22), 0 12px 22px rgba(0,0,0,0.70);
            border-color: rgba(0,255,200,0.45);
        }

        .producto-card img {
            width: 100%;
            height: 240px;
            object-fit: cover;
        }

    .producto-info {
        padding: 18px;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .producto-info h3 {
            font-size: 1.25rem;
            margin-bottom: 6px;
            color: #fff;
        }

        .producto-info p {
            font-size: 0.95rem;
            color: #ccc;
            margin-bottom: 4px;
        }

        .producto-info .precio {
            color: #00ffcc;
            font-weight: bold;
            font-size: 1.1rem;
            margin-top: 8px;
        }

    .btn-volver {
        display: inline-block;
        margin-top: 40px;
        background-color: transparent;
        border: 1px solid #00bfa6;
        color: #00bfa6;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-volver:hover {
            background-color: #00bfa6;
            color: #0f0f0f;
        }

    .btn-comprar {
        margin-top: 10px;
        padding: 9px 12px;
        border-radius: 10px;
        background: #00bfa6;
        border: none;
        color: #000;
        font-weight: 700;
        cursor: pointer;
        transition: background .25s;
    }

        .btn-comprar:hover {
            background: #00e6c3;
        }
</style>


<div class="servicio-container">
    <div class="servicio-header">
        <h1>🍽️ @categoria</h1>
        <input type="text" placeholder="Buscar locales o productos..." />
    </div>

    <div class="productos-grid">
        @if (Model != null && Model.Any())
        {
            var imagenes = new List<string>
                {
                "https://images.unsplash.com/photo-1600891964599-f61ba0e24092?w=900", /* pasta */
                "https://images.unsplash.com/photo-1551782450-17144c3fa353?w=900", /* hamburguesa */
                "https://images.unsplash.com/photo-1546069901-eacef0df6022?w=900", /* desayuno */
                "https://images.unsplash.com/photo-1542528180-7d95a1ac0f42?w=900", /* sushi */
                "https://images.unsplash.com/photo-1504674900247-0877df9cc836?w=900", /* tacos */
                "https://images.unsplash.com/photo-1601312377421-d327d038a150?w=900", /* pizza */
                "https://images.unsplash.com/photo-1606755962773-d324e0bbf6d6?w=900", /* postres */
                "https://images.unsplash.com/photo-1504674900247-0877df9cc836?w=900"  /* parrilla */
                };

            int index = 0;

            foreach (var producto in Model)
            {
                var img = imagenes[index % imagenes.Count];
                index++;

                <div class="producto-card">
                    <img src="@img" alt="@producto.Nombre">

                    <div class="producto-info">
                        <div>
                            <h3>@producto.Nombre</h3>
                            <p>@producto.Categoria</p>
                            <p class="precio">@producto.Precio.ToString("C0")</p>
                        </div>

                        @Html.AntiForgeryToken()
                        <button type="button"
                                onclick="enviarPedido(@producto.Id)"
                                class="btn-comprar">
                            Comprar
                        </button>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No hay productos disponibles.</p>
        }
    </div>

    <a href="/PedidosYa/PedidosYaLobby" class="btn-volver">⬅️ Volver</a>
</div>

@section Scripts {
    <script>
        async function enviarPedido(productoId) {
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            try {
                const res = await fetch('/PedidosYa/solicitarPedido', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': token
                    },
                    body: new URLSearchParams({ productoId })
                });

                const data = await res.json();

                if (data.success) {
                    console.log('✅ Pedido enviado correctamente');
                    setTimeout(() => {
                        window.location.href = '/PedidosYa/FinalizarCompra';
                    }, 5000);
                } else {
                    alert('⚠️ Ocurrió un problema');
                }
            } catch (err) {
                console.error('Error:', err);
                alert('❌ Error de red');
            }
        }
    </script>
}
