@{
    ViewData["Title"] = "Pedidos Ya";
}

<style>
    /* ====== CONTENEDOR PRINCIPAL ====== */
    .pedidos-container {
        min-height: calc(100vh - 130px);
        padding: 40px 20px;
        font-family: "Poppins", sans-serif;
        background: radial-gradient(circle at top, #1a1a1a, #0d0d0d);
        color: #fff;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* ===== TÍTULO ===== */
    .pedidos-title {
        font-size: 2.6rem;
        font-weight: 800;
        background: linear-gradient(90deg, #00ffd0, #00aaff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 35px;
        letter-spacing: 1px;
        text-align: center;
    }

    /* ===== BUSCADOR ===== */
    .search-input {
        width: 320px;
        background-color: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255,255,255,0.15);
        border-radius: 12px;
        padding: 12px 16px;
        font-size: 1rem;
        color: #fff;
        margin-bottom: 50px;
        box-shadow: 0 4px 14px rgba(0,0,0,0.35);
        backdrop-filter: blur(12px);
    }

        .search-input::placeholder {
            color: #bbb;
        }

    /* ===== CONTENEDOR DE CARDS ===== */
    .categoria-cards {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 45px;
        width: 100%;
        max-width: 1200px;
    }

    /* ===== CARD DE CATEGORIA ===== */
    .categoria-card {
        width: 360px;
        height: 430px;
        text-decoration: none;
        overflow: hidden;
        border-radius: 22px;
        background: rgba(20,20,20,0.55);
        border: 1px solid rgba(255,255,255,0.06);
        box-shadow: 0 10px 32px rgba(0,0,0,0.75);
        backdrop-filter: blur(20px);
        display: flex;
        flex-direction: column;
        transition: transform .35s ease, box-shadow .35s ease, border .35s ease, filter .35s ease;
        filter: grayscale(100%) brightness(0.7);
        cursor: pointer;
    }

        .categoria-card:hover {
            transform: translateY(-12px) scale(1.03);
            filter: none;
            border-color: rgba(0,255,200,0.35);
            box-shadow: 0 18px 38px rgba(0,255,200,0.12), 0 14px 30px rgba(0,0,0,0.8);
        }

    /* ===== IMAGEN GRANDE ===== */
    .categoria-img {
        height: 250px; /* Imagen más grande 🔥 */
        width: 100%;
        object-fit: cover;
        border-bottom: 1px solid rgba(255,255,255,0.06);
    }

    /* ===== TEXTO ===== */
    .categoria-content {
        padding: 26px;
        text-align: left;
    }

    .categoria-title {
        font-size: 1.55rem;
        font-weight: 700;
        margin: 0 0 10px;
        color: #fff;
    }

    .categoria-desc {
        font-size: 1.05rem;
        color: #dcdcdc;
        margin: 0;
    }
</style>


<!-- ===================== HTML ===================== -->
<div class="pedidos-container">

    <!-- TÍTULO -->
    <h1 class="pedidos-title">🍔 Hola, ¿qué vas a pedir hoy?</h1>

    <!-- BUSCADOR -->
    <input type="text" class="search-input" placeholder="Buscar locales o productos..." />

    <!-- CARDS DE CATEGORÍAS -->
    <div class="categoria-cards">

        <!-- RESTAURANTES -->
