<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TpSignalR</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TpSignalR.Web.styles.css" asp-append-version="true" />
    <style>
        body {
          margin: 0;
          background-color: #0d0d0d;
          color: #fff;
          font-family: 'Segoe UI', sans-serif;
        }

        /* ===== NAVBAR ===== */
        nav {
          display: flex;
          align-items: center;
          justify-content: space-between;
          background-color: #0a0a0a;
          padding: 12px 40px;
          box-shadow: 0 2px 6px rgba(0,0,0,0.4);
        }

        .nav-left {
          display: flex;
          align-items: center;
          gap: 32px;
        }

        .logo {
          font-weight: 700;
          font-size: 1.3rem;
        }

        .nav-links {
          display: flex;
          align-items: center;
          gap: 20px;
        }

        .nav-links a {
          color: #e5e5e5;
          text-decoration: none;
          font-weight: 500;
          padding: 6px 12px;
          border-radius: 6px;
          transition: background-color 0.3s;
        }

        .nav-links a:hover,
        .nav-links a.active {
          background-color: #1a1a1a;
          color: #fff;
        }

        .nav-right {
          display: flex;
          align-items: center;
          gap: 16px;
        }

        .username {
          font-size: 0.95rem;
          color: #ccc;
        }

        .btn-logout {
          background-color: transparent;
          color: #fff;
          border: 1px solid #444;
          border-radius: 6px;
          padding: 6px 12px;
          cursor: pointer;
          transition: background-color 0.3s;
        }

        .btn-logout:hover {
          background-color: #ff4444;
          border-color: #ff4444;
        }

        .btn-test {
            background-color: #2b6cb0;
            color: white;
            border: none;
            padding: 6px 10px;
            border-radius: 6px;
            cursor: pointer;
        }
        .btn-test:hover { opacity: 0.9; }
    </style>
</head>
<body>
    <header>
        <nav>
            <div class="nav-left">
                <a style="text-decoration:none" href="/Inicio/Home"><div class="logo">PromediosYa</div></a>
                <div class="nav-links">
                    <a href="/Inicio/Home" class="active">Inicio</a>
                    <a href="/PedidosYa/PYLobby">Pedidos Ya</a>
                    <a href="/Promiedos/PromiedosLobby">Promiedos</a>
                    <a href="/chat/index">Chat</a>
                    <a href="/Seguimiento/PruebaIngresoDeDatosDelivery">Seguimiento de Delivery</a>
                    <a href="/Comercio/Inicio">Administrador Comercio</a>
                </div>
            </div>
            <div class="nav-right">
                <div class="username">
                    @Context.Session.GetString("NombreUsuario")
                </div>
                <a href="/registro/login">
                    <button class="btn-logout">Salir</button>
                </a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            Footer
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.12/signalr.min.js"></script>

    @* SignalR notification registration *@
    <script>
        (function(){
            try {
                var uid = @((Context.Session.GetInt32("UsuarioId") ?? -1));
            } catch(e) {
                var uid = -1;
            }

            console.log('SignalR init, uid=', uid);

            if (uid && uid > 0) {
                const connection = new signalR.HubConnectionBuilder()
                    .withUrl('/notificationHub')
                    .withAutomaticReconnect()
                    .configureLogging(signalR.LogLevel.Information)
                    .build();

                connection.on('Notify', function(message) {
                    console.log('Notify received:', message);
                    try { alert(message); } catch(e){ console.warn('alert failed', e); }
                });

                connection.onclose(function(err){
                    console.warn('SignalR connection closed', err);
                });

                connection.onreconnecting(function(err){
                    console.warn('SignalR reconnecting', err);
                });

                connection.onreconnected(function(connectionId){
                    console.log('SignalR reconnected, connectionId=', connectionId);
                    // Re-register after reconnect
                    connection.invoke('Register', uid).catch(function(err){ console.error('Register after reconnect failed', err.toString()); });
                });

                connection.start()
                    .then(function(){
                        console.log('SignalR connected, invoking Register with uid=', uid);
                        return connection.invoke('Register', uid);
                    })
                    .then(function(){
                        console.log('Register invoked successfully');
                    })
                    .catch(function(err){ console.error('SignalR start or register failed', err.toString()); });

            } else {
                console.log('No usuarioId in session, skipping SignalR registration');
            }
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
