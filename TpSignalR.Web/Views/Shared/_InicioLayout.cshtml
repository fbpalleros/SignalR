<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TpSignalR</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TpSignalR.Web.styles.css" asp-append-version="true" />
    <style>
        /* ====== GLOBAL ====== */
        body {
            margin: 0;
            background: radial-gradient(circle at top, #0c0c0c, #000);
            color: #f2f2f2;
            font-family: "Inter", "Segoe UI", sans-serif;
        }

        /* ====== NAVBAR ULTRA-PRO ====== */
        nav {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 14px 48px;
            background: rgba(15, 15, 15, 0.65);
            backdrop-filter: blur(18px);
            -webkit-backdrop-filter: blur(18px);
            box-shadow: 0 4px 22px rgba(0,0,0,0.55);
            border-bottom: 1px solid rgba(255,255,255,0.06);
            position: sticky;
            top: 0;
            z-index: 999;
        }

        .nav-left {
            display: flex;
            align-items: center;
            gap: 40px;
        }

        .logo {
            font-weight: 800;
            font-size: 1.45rem;
            letter-spacing: 0.8px;
            background: linear-gradient(90deg, #00ffd0, #00aaff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Links */
        .nav-links {
            display: flex;
            gap: 22px;
        }

            .nav-links a {
                color: #dcdcdc;
                text-decoration: none;
                font-weight: 500;
                padding: 8px 14px;
                border-radius: 8px;
                transition: 0.25s ease;
                font-size: 0.95rem;
            }

                .nav-links a:hover {
                    background: rgba(255,255,255,0.06);
                    color: #fff;
                }

                .nav-links a.active {
                    background: rgba(0,255,200,0.12);
                    color: #00ffd0;
                    box-shadow: 0 0 8px rgba(0,255,200,0.35);
                }

        /* ====== RIGHT SIDE ====== */
        .nav-right {
            display: flex;
            align-items: center;
            gap: 18px;
        }

        .username {
            font-size: 1rem;
            color: #e4e4e4;
            opacity: 0.85;
        }

        /* Logout button */
        .btn-logout {
            background: rgba(255,255,255,0.08);
            color: #fff;
            border: 1px solid rgba(255,255,255,0.15);
            border-radius: 8px;
            padding: 7px 14px;
            cursor: pointer;
            transition: 0.25s ease;
        }

            .btn-logout:hover {
                background: #ff4747;
                border-color: #ff4747;
                box-shadow: 0 0 12px rgba(255,50,50,0.5);
            }

        /* ===== TEST BUTTON ===== */
        .btn-test {
            background: linear-gradient(90deg, #2b6cb0, #355dff);
            color: white;
            border: none;
            padding: 6px 10px;
            border-radius: 6px;
            cursor: pointer;
            transition: 0.25s;
        }

            .btn-test:hover {
                opacity: 0.85;
                transform: translateY(-1px);
            }

        /* ====== CONTAINER ====== */
        .container {
            margin-top: 32px;
        }

        /* ===== FOOTER ===== */
        footer {
            background: transparent;
            color: #777;
            border-top: 1px solid rgba(255,255,255,0.08);
            padding: 18px 0;
        }

        /* ====== TOAST SYSTEM PREMIUM ====== */

        .toast-container {
            position: fixed;
            top: 24px;
            right: 24px;
            display: flex;
            flex-direction: column;
            gap: 14px;
            z-index: 9999;
            pointer-events: none;
        }

        .toast {
            display: flex;
            gap: 14px;
            min-width: 330px;
            max-width: 520px;
            background: rgba(15, 25, 20, 0.8);
            color: #dfffed;
            padding: 16px 18px;
            border-radius: 14px;
            border-left: 6px solid transparent;
            box-shadow: 0 12px 34px rgba(0,0,0,0.6), 0 2px 8px rgba(0,0,0,0.35);
            backdrop-filter: blur(12px);
            transform: translateY(-12px) scale(0.96);
            opacity: 0;
            transition: 0.28s cubic-bezier(.2,.9,.2,1);
            pointer-events: auto;
        }

            .toast.show {
                transform: translateY(0) scale(1);
                opacity: 1;
            }

            .toast .icon {
                width: 52px;
                height: 52px;
                border-radius: 12px;
                background: rgba(255,255,255,0.04);
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 26px;
                box-shadow: inset 0 -2px 6px rgba(0,0,0,0.25);
                flex-shrink: 0;
            }

            .toast .content {
                flex: 1;
            }

            .toast .title {
                font-weight: 800;
                color: #fff;
                font-size: 1.05rem;
                margin-bottom: 4px;
            }

            .toast .message {
                font-size: 0.94rem;
                opacity: 0.92;
                line-height: 1.3;
            }

            /* Semantic colors */
            .toast.success {
                border-left-color: #00ff9d;
            }

            .toast.info {
                border-left-color: #00c8ff;
            }

            .toast.warning {
                border-left-color: #ffaa00;
            }

            /* Roles */
            .toast.role-cliente {
                border-left-color: #1e90ff;
            }

            .toast.role-repartidor {
                border-left-color: #ff8c00;
            }

            .toast.role-comercio {
                border-left-color: #00ff5e;
            }

    </style>
</head>
<body>
    <header>
        <nav>
            <div class="nav-left">
                <a style="text-decoration:none" href="/Inicio/Home"><div class="logo">PromediosYa</div></a>
                <div class="nav-links">
                    <a href="/Inicio/Home" class="active">Inicio</a>
                    <a href="/PedidosYa/PYLobby">Pedidos Ya</a>
                    <a href="/Promiedos/PromiedosLobby">Promiedos</a>
                    <a href="/chat/index">Chat</a>
                    <a href="/Comercio/Inicio">Administrador Comercio</a>
                </div>
            </div>
            <div class="nav-right">
                <div class="username">
                    @Context.Session.GetString("NombreUsuario")
                </div>
                <a href="/registro/login">
                    <button class="btn-logout">Salir</button>
                </a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Toast container (global) -->
    <div id="toastContainer" class="toast-container" aria-live="polite" aria-atomic="true"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.12/signalr.min.js"></script>

    @* SignalR notification registration *@
    <script>
        (function(){
            try {
                var uid = @((Context.Session.GetInt32("UsuarioId") ?? -1));
            } catch(e) {
                var uid = -1;
            }

            // Expose uid for other scripts
            window.notificationUid = uid;

            console.log('SignalR init, uid=', uid);

            function ensureContainer() {
                if (!document.getElementById('toastContainer')) {
                    const c = document.createElement('div');
                    c.id = 'toastContainer';
                    c.className = 'toast-container';
                    c.setAttribute('aria-live','polite');
                    c.setAttribute('aria-atomic','true');
                    document.body.appendChild(c);
                }
            }

            // Helper to map numeric uid to role name
            window.getRoleForUid = function(uid) {
                try {
                    const id = Number(uid);
                    if (!id || id <= 0) return null;
                    const comercio = [1,4];
                    const cliente = [2,6];
                    const repartidor = [3,5];
                    if (comercio.includes(id)) return 'comercio';
                    if (cliente.includes(id)) return 'cliente';
                    if (repartidor.includes(id)) return 'repartidor';
                    return null;
                } catch(e) {
                    return null;
                }
            };

            // Expose a global helper for pages (now accepts optional role)
            window.showNotification = function(type, title, message, timeout, customIcon, role) {
                try {
                    timeout = timeout || 10000;
                    ensureContainer();
                    const container = document.getElementById('toastContainer');
                    if (!container) return;

                    // Resolve role: explicit param > derived from session uid
                    const resolvedRole = role || window.getRoleForUid(window.notificationUid);
                    const roleClass = resolvedRole ? `role-${resolvedRole}` : '';

                    const toast = document.createElement('div');
                    toast.className = `toast ${type || ''} ${roleClass}`.trim();

                    const icon = document.createElement('div');
                    icon.className = 'icon';
                    // Default icon will be role-specific if no custom icon provided
                    let defaultIcon = customIcon || 'ℹ️';
                    if (!customIcon) {
                        if (resolvedRole === 'comercio') defaultIcon = '🏪';
                        else if (resolvedRole === 'cliente') defaultIcon = '👤';
                        else if (resolvedRole === 'repartidor') defaultIcon = '🏍️';
                    }
                    icon.textContent = defaultIcon;

                    // Color the icon based on role if any
                    if (resolvedRole === 'comercio') {
                        icon.style.color = '#00c853';
                        icon.style.background = 'rgba(0,200,83,0.06)';
                    } else if (resolvedRole === 'cliente') {
                        icon.style.color = '#1e90ff';
                        icon.style.background = 'rgba(30,144,255,0.06)';
                    } else if (resolvedRole === 'repartidor') {
                        icon.style.color = '#ff8c00';
                        icon.style.background = 'rgba(255,140,0,0.06)';
                    }

                    const content = document.createElement('div');
                    content.className = 'content';

                    // Build a title with role-specific extra emojis
                    const titleEl = document.createElement('div');
                    titleEl.className = 'title';
                    let decoratedTitle = title || '';
                    if (resolvedRole === 'comercio') {
                        // two store icons around title
                        decoratedTitle = `🏪 ${decoratedTitle} 🏪`;
                      } else if (resolvedRole === 'cliente') {
                        decoratedTitle = `👤 ${decoratedTitle}`;
                      } else if (resolvedRole === 'repartidor') {
                        decoratedTitle = `🏍️ ${decoratedTitle}`;
                      }
                    titleEl.textContent = decoratedTitle;

                    const m = document.createElement('div');
                    m.className = 'message';
                    m.textContent = message || '';

                    content.appendChild(titleEl);
                    content.appendChild(m);

                    toast.appendChild(icon);
                    toast.appendChild(content);

                    container.prepend(toast);

                    // Force reflow then show
                    requestAnimationFrame(() => {
                        toast.classList.add('show');
                    });

                    const remove = () => {
                        toast.classList.remove('show');
                        setTimeout(() => toast.remove(), 300);
                    };

                    const timer = setTimeout(remove, timeout);
                    toast.addEventListener('click', () => { clearTimeout(timer); remove(); });
                } catch (ex) {
                    console.warn('showNotification failed', ex);
                }
            };

            // Create and expose a single notification hub connection for the whole layout
            const notificationConnection = new signalR.HubConnectionBuilder()
                    .withUrl('/notificationHub')
                    .withAutomaticReconnect()
                    .configureLogging(signalR.LogLevel.Information)
                    .build();

            // Expose globally for pages to reuse
            window.notificationConnection = notificationConnection;

            notificationConnection.on('Notify', function(message) {
                console.log('Notify received:', message);
                try {
                    var roleFromSession = window.getRoleForUid(window.notificationUid);

                    // Messages can be objects (structured) or strings. Normalize.
                    var payload = message;
                    var msgText = '';
                    var title = 'Pedido';
                    var explicitType = null;
                    var explicitRole = null;

                    if (payload && typeof payload === 'object') {
                        explicitRole = payload.role || payload.targetRole || null;
                        msgText = payload.message || payload.text || payload.msg || JSON.stringify(payload);
                        title = payload.title || title;
                        explicitType = payload.type || null;
                    } else {
                        msgText = (payload || '').toString();
                    }

                    // If server provided an explicit role and it doesn't match this session's role, ignore the notification
                    if (explicitRole && roleFromSession && explicitRole !== roleFromSession) {
                        console.log('Skipping Notify: explicit role', explicitRole, 'does not match session role', roleFromSession);
                        return;
                    }

                    var type = explicitType || 'info';
                    var low = (msgText || '').toLowerCase();
                    if (!explicitType) {
                        if (low.indexOf('entreg') !== -1 || low.indexOf('finaliz') !== -1) type = 'success';
                        else if (low.indexOf('pend') !== -1) type = 'warning';
                        else if (low.indexOf('camino') !== -1) type = 'info';
                    }

                    var roleToUse = explicitRole || roleFromSession;

                    window.showNotification(type, title, msgText, (payload && payload.timeout) || 10000, (payload && payload.customIcon) || null, roleToUse);
                } catch(e) {
                    console.error('Error handling Notify', e);
                    try { alert(message); } catch(er) { console.warn('alert failed', er); }
                }
            });

            notificationConnection.onclose(function(err){
                console.warn('SignalR connection closed', err);
            });

            notificationConnection.onreconnecting(function(err){
                console.warn('SignalR reconnecting', err);
            });

            notificationConnection.onreconnected(function(connectionId){
                console.log('SignalR reconnected, connectionId=', connectionId);
                // Re-register after reconnect
                if (window.notificationUid && window.notificationUid > 0) {
                    notificationConnection.invoke('Register', window.notificationUid).catch(function(err){ console.error('Register after reconnect failed', err.toString()); });
                }
            });

            // Start and register (single connection)
            notificationConnection.start()
                .then(function(){
                    console.log('NotificationHub connected, invoking Register with uid=', uid);
                    if (uid && uid > 0) {
                        return notificationConnection.invoke('Register', uid);
                    }
                    return Promise.resolve();
                })
                .then(function(){
                    console.log('Register invoked successfully');
                })
                .catch(function(err){ console.error('NotificationHub start or register failed', err.toString()); });

        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
